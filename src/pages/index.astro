import RoomFlow from "../components/RoomFlow.jsx";

const base = import.meta.env.BASE_URL;
const baseWithSlash = base.endsWith('/') ? base : base + '/';
---

<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <title>wordchain</title>
    <link rel="icon" type="image/svg+xml" href={`${baseWithSlash}favicon.svg`} />
    <link rel="stylesheet" href={`${baseWithSlash}style.css`} />
  </head>
  <body>
    <RoomFlow client:load />
  </body>
</html>
